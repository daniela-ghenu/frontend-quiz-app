<header class="container flex justify-between pt-6 pb-4 md:py-10 xl:py-20">
  <div class="js-quiz-subject | invisible"></div>
  <!-- Light/Dark theme switcher -->
  <label for="theme-toggle" class="flex items-center ms-auto space-x-2 cursor-pointer md:space-x-4">
    <svg class="text-grey-navy dark:text-white select-none" width="24" height="24" aria-hidden="true" focusable="false">
      <title>Light Theme Icon</title>
      <use xlink:href="#icon-sun-dark"></use>
    </svg>
    <!-- Theme toggle -->
    <span class="flex relative has-[:focus-visible]:ring-2 has-[:focus-visible]:ring-dark-navy dark:has-[:focus-visible]:ring-white rounded-full">
      <input id="theme-toggle" type="checkbox" class="sr-only peer" aria-label="Toggle dark or light theme">
      <span class="inline-block w-10 h-[1.6rem] md:w-12 md:h-7 rounded-full bg-purple-700"></span>
      <span class="inline-block absolute inset-y-[1px] left-0 m-1 size-4 md:size-5 md:inset-y-0 rounded-full bg-white transition-all peer-checked:translate-x-full"></span>
    </span>
    <svg class="text-grey-navy dark:text-white select-none" width="24" height="24" aria-hidden="true" focusable="false">
      <title>Dark Theme Icon</title>
      <use xlink:href="#icon-moon-dark"></use>
    </svg>
  </label>
</header>